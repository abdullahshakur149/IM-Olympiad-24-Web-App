


<div class="container">

    <form class="RegisterForm" action="/register/new-registration" method="post">

        <div class="row">

            <!-- PERSONAL DETAILS -->
            <div class="col-12 col-md-6 mt-5">
    
                <h4>Personal Details</h4>
            
                <div class="mb-3 mt-4">
                    <label for="studentType" class="form-label">Are you a student of IMSciences?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="studentType" value="yes" id="studentTypeYes">
                        <label class="form-check-label" for="studentTypeYes">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="studentType" value="no" id="studentTypeNo">
                        <label class="form-check-label" for="studentTypeNo">No</label>
                    </div>
                </div>
                <div class="mb-3" id="studentIdInput" style="display: none;">
                    <label for="studentId" class="form-label">Student ID Card No.</label>
                    <input type="number" class="form-control" id="studentId" name="studentId" placeholder="Student ID" />
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter Full Name">
                </div>
                <div class="mb-3">
                    <label for="FatherName" class="form-label">Father Name</label>
                    <input type="text" class="form-control" name="FatherName" id="FatherName"
                        placeholder="Enter Father Name">
                </div>
                <div class="mb-3">
                    <label for="ContactNumber" class="form-label">Contact Number</label>

                    <input type="tel" inputmode="numeric" class="form-control" name="ContactNumber" id="ContactNumber"

                        placeholder="Enter Contact Number">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter Email">
                </div>
                <div class="mb-3">
                    <label for="cnic" class="form-label">CNIC</label>
                    <input type="number" class="form-control" name="cnic" id="cnic" placeholder="Enter CNIC">
                </div>
                               
    
            </div>


            <!-- EVENT DETAILS -->

            <div class="col-12 col-md-6 mt-5">
                <h4>Event Details</h4>

                <div class="mb-3 mt-4">
                    <label for="RegisterAs" class="form-label">Register as?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="RegisterAs" value="observer" id="RegisterAsObserver">
                        <label class="form-check-label" for="RegisterAsObserver">Observer</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="RegisterAs" value="participant" id="RegisterAsParticipant">
                        <label class="form-check-label" for="RegisterAsParticipant">Participant</label>
                    </div>
                    <div class="form-check">

                        <input class="form-check-input" type="radio" name="RegisterAs" value="participantAndSocialEvent" id="RegisterAsParticipantAndSocialEvent">

                        <label class="form-check-label" for="RegisterAsParticipantAndSocialEvent">Participant + Social Event</label>
                    </div>
                </div>
                <div class="mb-3" id="sports" style="display: none;">
                    <label for="selectsport" class="form-label">Select Sport</label>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Futsal" value="Futsal" id="Futsal">
                        <label class="form-check-label" for="Futsal">
                            Futsal
                        </label>
                    </div>
                    <div class="mb-3 mt-2 ms-4 border-start ps-2" id="FutsalPlayersDiv" style="display: none;">
                        <label for="FutsalPlayers" class="form-label">Total Players</label>

                        <input type="number" class="form-control" id="FutsalPlayers" name="FutsalPlayers" disabled min="5" max="8" value="5" placeholder="Enter Total Team Players (5-8)"/>

                        <div id="FutsalPlayersError" class="text-danger" style="display: none;"></div>
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Basketball" value="Basketball" id="Basketball">
                        <label class="form-check-label" for="Basketball">
                            Basketball
                        </label>
                    </div>
                    <div class="mb-3 mt-2 ms-4 border-start ps-2" id="BasketballPlayersDiv" style="display: none;">
                        <label for="BasketballPlayers" class="form-label">Total Players</label>

                        <input type="number" class="form-control" id="BasketballPlayers" name="BasketballPlayers" disabled min="5" max="8" value="5" placeholder="Enter Total Team Players (5-8)"/>

                        <div id="BasketballPlayersError" class="text-danger" style="display: none;"></div>
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Badminton" value="Badminton" id="Badminton">
                        <label class="form-check-label" for="Badminton">
                            Badminton
                        </label>
                    </div>
                    <div class="mb-3 mt-2 ms-4 border-start ps-2" id="BadmintonTypeDiv" style="display: none;">
                        <label for="BadmintonType" class="form-label">Match Type</label>
                        <div class="form-check">

                            <input class="form-check-input" type="radio" name="matchType" disabled value="single" id="single" checked>

                            <label class="form-check-label" for="single">Single</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="matchType" value="double" id="double">
                            <label class="form-check-label" for="double">Double</label>
                        </div>
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="TableTennis" value="TableTennis" id="TableTennis">
                        <label class="form-check-label" for="TableTennis">
                            Table-Tennis (Single)
                        </label>
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="BoardGames" value="BoardGames" id="BoardGames">
                        <label class="form-check-label" for="BoardGames">
                            Board Games
                        </label>
                    </div>
                    <div class="mb-3 ms-4 border-start ps-2" id="BoardGamesDiv" style="display: none;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Ludo" value="Ludo" id="Ludo">
                            <label class="form-check-label" for="Ludo">
                                Ludo (Single)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Chess" value="Chess" id="Chess">
                            <label class="form-check-label" for="Chess">
                                Chess (Single)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Carrom" value="Carrom" id="Carrom">
                            <label class="form-check-label" for="Carrom">
                                Carrom (Single)
                            </label>
                        </div>
                    </div>



                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="EGaming" value="EGaming" id="EGaming">
                        <label class="form-check-label" for="EGaming">
                            E-Gaming
                        </label>
                    </div>
                    <div class="mb-3 ms-4 border-start ps-2" id="EGamingDiv" style="display: none;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Tekken" value="Tekken" id="Tekken">
                            <label class="form-check-label" for="Tekken">
                                Tekken (Single)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Fifa" value="Fifa" id="Fifa">
                            <label class="form-check-label" for="Fifa">
                                Fifa (Single)
                            </label>
                        </div>
                        
                    </div>



                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ParliamentarySummit" value="ParliamentarySummit" id="ParliamentarySummit">
                        <label class="form-check-label" for="ParliamentarySummit">
                            Parliamentary Summit
                        </label>
                    </div>
                    <div id="ParliamarySummitDiv" class="mb-3 ms-4 border-start ps-2" style="display: none;">
                        <div class="mb-3 mt-2">
                            <label for="experience" class="form-label">Previous MUN/PNA Experience</label>

                            <input type="number" class="form-control" id="experience" disabled name="experience"/>

                        </div>
                        <div class="mb-3 mt-2">
                            <label for="LeaderOfHouse" class="form-label">Are you expecting to be leader of the house?</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="LeaderOfHouse" value="yes" id="LeaderOfHouseYes">
                                <label class="form-check-label" for="LeaderOfHouseYes">Yes</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="LeaderOfHouse" value="no" id="LeaderOfHouseNo">
                                <label class="form-check-label" for="LeaderOfHouseNo">No</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3 mt-2">
                    <label for="ambassador" class="form-label">Ambassador <span class="text-body-secondary small">(optional)</span></label>
                    <input type="text" class="form-control" name="ambassador" id="ambassador" placeholder="Enter name of ambassador (if any)"/>
                </div>
            </div>
        </div>
        <div class="mb-4 mt-4" id="TotalPriceDiv">
            <label class="form-label">Checkout</label>
            <div class="PriceBoard">
               <div id="ObserverTotalDiv" class="obseverTotal d-flex justify-content-between align-items-center">
                <div><p class="checkoutlabel">Observer:</p></div>
                <div><p id="observertotalprice"></p></div>
               </div>

               <div id="SportsTotalDiv" class="sportsTotal d-flex justify-content-between align-items-center">
                <div><p class="checkoutlabel">Sports:</p></div>
                <div><p id="sportstotalprice"></p></div>
               </div>

               <div id="SocialEventsTotalDiv" class="socialeventsTotal d-flex justify-content-between align-items-center">
                <div><p class="checkoutlabel">Social Events:</p></div>
                <div><p id="socialeventstotalprice"></p></div>
               </div>

               <div class="finalTotal mt-3 pt-2 d-flex justify-content-between align-items-center">
                <div><p class="finaltotallabel">Total:</p></div>
                <div><p id="finaltotalprice"></p></div>
               </div>
            </div>
        </div> 
        <div class="mb-4 mt-4">
            <button type="submit" class="btn btn-lg SubmitBtn">Submit</button>

            <h4><%=response_msg%></h4>

        </div>
    </form>
</div>